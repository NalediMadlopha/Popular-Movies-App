<resources>

    <!-- Base application theme. -->
    <style mName="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item mName="colorPrimary">@color/colorPrimary</item>
        <item mName="colorAccent">@color/colorAccent</item>
    </style>

    <style mName="CustomWindowTitleText" parent="android:TextAppearance">
        <item mName="android:textColor">@color/colorAccent</item>
    </style>

    <style mName="AppTheme.NoActionBar">
        <item mName="windowActionBar">false</item>
        <item mName="windowNoTitle">true</item>
    </style>

    <style mName="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style mName="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

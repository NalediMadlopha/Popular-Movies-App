<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HeadingTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/top_padding</item>
        <item name="android:paddingBottom">@dimen/top_padding</item>
        <item name="android:paddingLeft">@dimen/top_padding</item>
        <item name="android:paddingRight">@dimen/top_padding</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:layout_gravity">start|top</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LargeHeading" parent="HeadingTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxEms">14</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="MeduimHeading" parent="HeadingTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:maxEms">10</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="SmallHeading" parent="HeadingTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:maxEms">10</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">start|top</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="Header1">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:layout_gravity">start|top</item>
    </style>

    <style name="Header2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxEms">10</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="CardView.Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
    </style>

    <style name="CardView.Title">
        <item name="android:textSize">@dimen/cardview_title_textsize_17</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:layout_gravity">start|top</item>
        <item name="android:maxEms">14</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CardView.Subtitle">
        <item name="android:textSize">@dimen/cardview_subtitle_textsize</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:layout_gravity">start|top</item>
        <item name="android:maxEms">14</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CardView.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/cardview_icon_height</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
